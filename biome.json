{
  "formatter": {
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "lineWidth": 120
    }
  },
  "json": {
    "formatter": {
      "enabled": false
    }
  },
  "files": {
    "includes": [
      "migrations/scripts/**/*.js",
      "migrations/settings/*.js",
      "migrations/*.json",
      "scripts/*.cjs",
      "src/**/*.cjs",
      "src/**/*.ts"
    ]
  },
  "linter": {
    "includes": [
      "migrations/scripts/**/*.js",
      "migrations/settings/*.js",
      "migrations/*.json",
      "scripts/*.cjs",
      "src/**/*.cjs",
      "src/**/*.ts"
    ],
    "rules": {
      "suspicious": {
        "noControlCharactersInRegex": "off",
        "noExplicitAny": "off",
        "noImplicitAnyLet": "off"
      }
    }
  }
}
